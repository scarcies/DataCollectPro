modules = ["bash", "nodejs-20"]
compile = "make"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "make"]
run = ["sh", "-c", "npm run start"]

[workflows]
runButton = "DataCollectPro Dev"

[[workflows.workflow]]
name = "DataCollectPro Dev"
author = 42083418
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üöÄ Starting DataCollectPro Development Environment...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üì¶ Installing dependencies...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîß Running database migrations...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/lib/bin/run-migrations.js || echo \"‚ö†Ô∏è Migration warnings (expected on first run)\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üåê Starting development server...\""

[[workflows.workflow.tasks]]
